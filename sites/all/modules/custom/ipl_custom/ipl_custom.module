function check_role() {
  global $user;
  $roles = $user->roles;

  if (in_array('Admin', $roles) || in_array('administrator', $roles)) {
    return TRUE;
  }

  return FALSE;
}

function check_access_user() {
  if (user_is_logged_in()) {
    return TRUE;
  }

  return FALSE;
}

